<p id="notice"><%= notice %></p>

<h1>Todos</h1>

<table class= "table table-striped table-bordered">
  <thead>
    <tr>
      <th>Name</th>
      <th>Description</th>
      <th>Date created</th>
      <th>Due date</th>
      <th>Status</th>
      <th>Priority</th>
      <th colspan="4"></th>
    </tr>
  </thead>

  <tbody>
    <% @todos.each do |todo| %>
      <tr>
        <td><%= todo.name %></td>
        <td><%= todo.description %></td>
        <td><%= todo.created_at %></td>
        <td><%= todo.due_date %></td>
        <% if todo.status %>
        <td class="success">Completed</td>
        <% else %>
        <td class="danger">Pending</td>
        <% end %>
        <td><%= todo.priority %></td>
        <td><%= link_to 'Mark', mark_todo_path(todo.id) ,class: "btn btn-primary" %></td>
        <td><%= link_to 'Show', todo, class: "btn btn-primary" %></td>
        <td><%= link_to 'Edit', edit_todo_path(todo), class: "btn btn-primary" %></td>
        <td><%= link_to 'Destroy', todo, class: "btn btn-danger", method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Todo', new_todo_path, class: "btn btn-primary" %>
